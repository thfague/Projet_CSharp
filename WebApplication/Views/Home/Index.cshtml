@{
    ViewBag.Title = "Home Page";
}

<div class="row">
    <div class="col-12">
        <h2 class="mt-5">Projet du cours .NET de Licence Pro Web 2019/2020.</h2>
        <hr />
        <h3 class="mt-5 font-weight-normal font-italic">Fonctionnalités:</h3>
        <div class="row my-3">
            <div class="col-4">
                <div class="list-group" id="list-tab" role="tablist">
                    <a class="list-group-item list-group-item-action active" id="list-classe-list" data-toggle="list" href="#list-classe" role="tab" aria-controls="classe">Classe</a>
                    <a class="list-group-item list-group-item-action" id="list-eleve-list" data-toggle="list" href="#list-eleve" role="tab" aria-controls="eleve">Élève</a>
                    <a class="list-group-item list-group-item-action" id="list-note-list" data-toggle="list" href="#list-note" role="tab" aria-controls="note">Note</a>
                    <a class="list-group-item list-group-item-action" id="list-absence-list" data-toggle="list" href="#list-absence" role="tab" aria-controls="absence">Absence</a>
                </div>
            </div>
            <div class="col-8">
                <div class="tab-content" id="nav-tabContent">
                    <div class="tab-pane fade show active" id="list-classe" role="tabpanel" aria-labelledby="list-classe-list">
                        <ul>
                            <li>Liste de toutes les classes</li>
                            <li>Liste d'une classe en détail (liste de tous les élèves de la classe)</li>
                            <li>Barre de recherche: établissement ou niveau (attention: case sensitive)</li>
                        </ul>
                    </div>
                    <div class="tab-pane fade" id="list-eleve" role="tabpanel" aria-labelledby="list-eleve-list">
                        <ul>
                            <li>Liste de tous les élèves</li>
                            <li>Liste d'un élève en détail (nom, prenom, date de naissance, notes et absences)</li>
                            <li>Barre de recherche: nom ou prénom (attention: case sensitive)</li>
                        </ul>
                    </div>
                    <div class="tab-pane fade" id="list-note" role="tabpanel" aria-labelledby="list-note-list">
                        <ul>
                            <li>Ajout d'une note</li>
                            <li>Modification d'une note</li>
                            <li>Suppression d'une note</li>
                        </ul>
                    </div>
                    <div class="tab-pane fade" id="list-absence" role="tabpanel" aria-labelledby="list-absence-list">
                        <ul>
                            <li>Ajout d'une absence</li>
                            <li>Suppression d'une absence</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>